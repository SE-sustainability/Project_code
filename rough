import 'package:flutter/material.dart';
import 'note_screen.dart';
import 'note.dart'; // Import the Note class

class HomeScreen extends StatefulWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Reminders App'),
      ),
      backgroundColor: Colors.lightGreen, // Set the background color
      body: GridView.count(
        crossAxisCount: 2, // Number of columns in the grid
        crossAxisSpacing: 16.0,
        mainAxisSpacing: 16.0,
        padding: EdgeInsets.all(16.0),
        children: [
          _buildModeCard("Home", Icons.home, Colors.blue),
          _buildModeCard("Work", Icons.work, Colors.orange),
          _buildModeCard("Holiday", Icons.beach_access, Colors.green),
          _buildModeCard("Car", Icons.directions_car, Colors.red),
          _buildModeCard("Plus", Icons.add, Colors.grey),
        ],
      ),

      floatingActionButton: FloatingActionButton(
        onPressed: () {
         // Handle adding a new reminder
          print("Adding a new reminder");
        },
         child: Icon(Icons.add),(Icons.home), (Icons.work),(Icons.beach_access),(Icons.directions_car)

      ),
    );
  }


Widget _buildModeCard(String label, IconData icon, Color color) {
    return GestureDetector(
      onTap: () {
        // Handle mode selection here
        print("Selected mode: $label");
      },
      child: Card(
        color: color,
        shape: RoundedRectangleBorder(
          borderRadius: BorderRadius.circular(12.0),
        ),
        elevation: 4.0,
        child: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(
                icon,
                size: 40.0,
                color: Colors.white,
              ),
              SizedBox(height: 8.0),
              Text(
                label,
                style: TextStyle(
                  color: Colors.white,
                  fontWeight: FontWeight.bold,
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
